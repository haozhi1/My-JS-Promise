{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES5",
        "outDir": "dist",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": ["lib/**.ts"],
    "exclude": ["node_modules/"]
}